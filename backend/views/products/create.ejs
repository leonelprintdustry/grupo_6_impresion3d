<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Crear un producto</title>
    <link rel="shortcut icon" href="/images/Logo-sin-fondo.png">
</head>
<body>
    <header>
       
        <%- include('../partials/header32') %>
       
    </header>

    <main>
        <ul>
            <% errors.forEach(errorActual => { %>
            <li><%= errorActual.msg %></li>
            <% }) %>
          </ul>
        
        <div class="formulario">
        <form action="/products/index" method="post" class="create-form" enctype="multipart/form-data">
                <div class="control-formulario">
                    <% if (errors.find(error => error.path === 'title')) { %>
                        <label style="color: red;" for="">Nombre</label>
                    <% }  else {%>
                        <label for="">Nombre:</label>
                    <% }  %>
                    <input type="text" value="<%= values.title %>" name="nombre" id="" class="control" placeholder="Coloca tu nombre aqui"  pattern=".{5,}" required>
                    <span class="error">Ingrese un nombre válido (al menos 5 caracteres)</span>  
                    <br>
                    <br>
                    <label for="">Descripcion:</label>
                    <input type="text" name="descripcion" id="description" class="control" placeholder="Coloca la descripcion del producto" pattern=".{20,}" required>
                    <span class="error">Ingrese una descripcion valida para el producto (al menos 20 caracteres)</span>  

                    <br>
                    <br>
                    <% if (errors.find(error => error.path === 'price')) { %>
                        <label style="color: red;" for="">Precio</label>
                    <% }  else {%>
                        <label for="">Precio:</label>
                    <% }  %>
                    <input type="number" value="<%= values.price %>" name="precio" id="" class="control" placeholder="Coloca el precio del producto aqui">
                    <br>
                    <br>
            
            <label for="">Categoria:</label>
            <select name="nombre_categoria" id="categoria" class="control">
                <option value="" disabled selected>Selecciona una categoría</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.nombre %>"><%= categoria.nombre %></option>
                <% }) %>
            </select>
            <br>
            <br>
            
            <label for="">Color:</label>
            <select name="nombre_color" id="color" class="control">
                <option value="" disabled selected>Selecciona un color</option>
                <% colores.forEach(color => { %>
                    <option value="<%= color.nombre %>"><%= color.nombre %></option>
                <% }) %>
            </select>
            <br>
            <br>
            
            <label for="material">Material:</label>
            <select name="nombre_material" id="material" class="control">
                <option value="" disabled selected>Selecciona un material</option>
                <% materiales.forEach(material => { %>
                    <option value="<%= material.nombre %>"><%= material.nombre %></option>
                <% }) %>
            </select>
            <br>
            <br>
               
            <label for="imagen">Imagen:</label>
            <input type="file" multiple accept=".jpg, .jpeg, .png" name="imagen" id="imagen">
            <br>
            <input type="submit" value="Enviar"><br>
            <input type="reset" value="Borrar"><br>
            </div>
        </form>
            </div>


    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>

</body>
</html>